@article{weiDeepCarbonReductions2013,
  title = {Deep Carbon Reductions in {{California}} Require Electrification and Integration across Economic Sectors},
  author = {Wei, Max and Nelson, James H. and Greenblatt, Jeffery B. and Mileva, Ana and Johnston, Josiah and Ting, Michael and Christopher Yang and Jones, Chris and McMahon, James E. and Kammen, Daniel M.},
