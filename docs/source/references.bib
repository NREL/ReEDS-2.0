@article{reedHowAreWe2021,
  title = {How Are We Going to Build All That Clean Energy Infrastructure? {{Considering}} Private Enterprise, Public Initiative, and Hybrid Approaches to the Challenge of Electricity Transmission},
  shorttitle = {How Are We Going to Build All That Clean Energy Infrastructure?},
  author = {Reed, Liza and Abrahams, Leslie and Cohen, Armond and Majkut, Joseph and Place, Andrew and Phillips, Bruce and Prochnik, Julia},
