  file = {/Users/kminderm/Zotero/storage/MKJ84G5P/Eurek et al. - 2021 - Representing DC-Coupled PV+Battery Hybrids in a Ca.pdf;/Users/kminderm/Zotero/storage/9EMGG56X/1781784.html}
}

