@article{loftusCriticalReviewGlobal2015,
  title = {A Critical Review of Global Decarbonization Scenarios: What Do They Tell Us about Feasibility?},
  shorttitle = {A Critical Review of Global Decarbonization Scenarios},
  author = {Loftus, Peter J. and Cohen, Armond M. and Long, Jane C. S. and Jenkins, Jesse D.},
